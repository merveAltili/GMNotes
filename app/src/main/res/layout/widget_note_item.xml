<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:elevation="5dp">

    <ImageView
        android:id="@+id/widget_img"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="NOTE"
        android:padding="4dp"
        android:src="@drawable/ic_crop_square_black_24dp" />

    <RelativeLayout
        android:id="@+id/relativeLayoutt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/widget_img"
        android:layout_alignTop="@+id/widget_img"
        android:layout_toEndOf="@+id/widget_img"
        android:layout_toRightOf="@+id/widget_img"
        android:background="#fff"
        android:padding="8dp">

        <TextView
            android:id="@+id/widgettxtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/widget_img"
            android:maxLength="15"
            android:text="Note Title"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <TextView
        android:id="@+id/widgettxtDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/widgettxtTitle"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="40dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingRight="8dp"
        android:text="detail"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/widgettxtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/widgettxtDetail"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:gravity="right"
        android:text="date"
        android:textSize="12sp" />
</RelativeLayout>