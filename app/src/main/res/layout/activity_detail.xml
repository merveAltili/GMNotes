<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.merve.butterknife.NoteAddActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/AppTheme.AppBarOverlay">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


    <EditText
        android:id="@+id/detailDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:ems="10"
        android:enabled="false"
        android:focusable="false"
        android:hint="buraya detail "
        android:inputType="textMultiLine"
        android:textColor="@color/cardview_dark_background"
        android:textColorHint="@color/cardview_dark_background" />

    <ImageView
        android:id="@+id/imgMedia"
        android:layout_width="300dp"
        android:layout_height="200dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal">


        <Button
            android:id="@+id/detailEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white2"
            android:drawableTop="@drawable/ic_edit_black_24dp"
            android:onClick="onClickEdit"
            android:text="edit"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/detailColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white2"
            android:drawableTop="@drawable/ic_color_lens_black_24dp"
            android:onClick="onClickRenk"
            android:text="color"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/detailSil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white2"
            android:drawableTop="@drawable/ic_delete_black_24dp"
            android:onClick="onClickSil"
            android:text="delete"

            android:textAllCaps="false" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSave2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/gri"
        android:padding="18dp"
        android:text="SAVE"
        android:textColor="@color/white" />
</LinearLayout>
